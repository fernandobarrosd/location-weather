<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="91dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_weather_item"
    android:elevation="8dp"
    android:layout_marginEnd="10dp"
    android:paddingVertical="8dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/day_of_week_short_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/day_of_week_short_name_string"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/temperature_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/day_of_week_short_name_text"
        android:text="@string/temperature_string"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>